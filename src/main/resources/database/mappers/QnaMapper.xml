<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.home.board.qna.QnaMapper">
	<select id="getList" resultType="QnaVO">
		SELECT * FROM QNA ORDER BY NUM DESC
	</select>
	<insert id="addList" parameterType="QnaVO">
		INSERT INTO QNA VALUES(#{num}, #{writer}, now(), #{title}, #{contents}, 1, 1, 1, 1)
	</insert>
	<select id="showList" resultType="QnaVO">
		SELECT * FROM QNA 
		WHERE CONTENTS LIKE CONCAT('%','a','%')  
		ORDER BY NUM DESC 
		LIMIT #{num},10;
	</select>
</mapper>